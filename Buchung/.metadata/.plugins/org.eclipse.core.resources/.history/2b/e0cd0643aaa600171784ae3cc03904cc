			while(rs.next()){
				System.out.println(rs.getString("id")+ " , "+rs.getString("name")+ " , "+ rs.getString("country"));*/
			
		}catch(Exception exc){
			exc.printStackTrace();
		}

	}
	
	public void getAbflughafen(){
		try{
			ps=con.prepareStatement("Select name from airports;");
			rs=ps.executeQuery();
			while(rs.next()){
				abflughafen.add(rs.getString("name"));
			}
		}catch(Exception e){
			e.printStackTrace();
		}
	}
}
