			// Connection
			
			con= DriverManager.getConnection("jdbc:mysql://"+GUI.sqlserver.getText()+":"+GUI.sqlport.getText()+"/"+GUI.sqldatabase.getText()+","+GUI.sqluser.getText()+","+GUI.sqlpwd.getText());
			/* //Statement
			ps = con.prepareStatement("Select * from airlines;");
