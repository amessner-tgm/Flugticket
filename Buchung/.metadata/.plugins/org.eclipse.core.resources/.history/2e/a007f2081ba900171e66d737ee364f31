	public void getCountry(){
		try{
			ps=con.prepareStatement("Select name from countries;");
			rs=ps.executeQuery();
			while(rs.next()){
				countries.add(rs.getString("name"));
			}
		}catch(Exception e){
			e.printStackTrace();
		}
		String countriesArr[] = countries.toArray(new String[countries.size()]);
		for(String s: countriesArr) {
			GUI.abfluglandbox.addItem(s);
			GUI.zielfluglandbox.addItem(s);
		}
	}
	
	public void getAbFlughafen(){
		try{
			ps=con.prepareStatement("Select name from airports WHERE countries.code=;");
			rs=ps.executeQuery();
			while(rs.next()){
				flughafen.add(rs.getString("name"));
			}
		}catch(Exception e){
			e.printStackTrace();
		}
		String flughafenArr[] = flughafen.toArray(new String[flughafen.size()]);
		
		for(String s: flughafenArr) {
			GUI.abflughafenbox.addItem(s);
			GUI.zielflughafenbox.addItem(s);
		}
		
	}
	public void getZielFlughafen(){
