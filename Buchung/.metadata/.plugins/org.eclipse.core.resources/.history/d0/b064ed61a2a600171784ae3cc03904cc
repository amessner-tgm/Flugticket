package jdbc;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.sql.*;
public class Driver implements ActionListener {
	GUI g;
	public Driver(){
		try {
			g=new GUI();
			// Connection
			
			Connection con= DriverManager.getConnection("jdbc:mysql://"+g.sqlserver+":"+g.sqlport+"/"+g.sqldatabase+","+g.sqluser+","+g.sqlpwd);
			//Statement
			PreparedStatement ps = con.prepareStatement("Select * from airlines;");
			//Resultset
			ResultSet rs=ps.executeQuery();
			//Ausgeben
			while(rs.next()){
				System.out.println(rs.getString("id")+ " , "+rs.getString("name")+ " , "+ rs.getString("country"));
			}
		}catch(Exception exc){
			exc.printStackTrace();
		}

	}
	public static void main(String[] arqs){
		new Driver();
	}
	@Override
	public void actionPerformed(ActionEvent arg0) {
		// TODO Auto-generated method stub
		
	}

}
